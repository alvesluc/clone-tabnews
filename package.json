{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run initialize && npm run migrations:up && next dev",
    "postdev": "npm run services:stop",
    "pretest": "watchman watch-del-all",
    "test": "npm run initialize && concurrently -n next,jest --hide next -k --success command-jest \"next dev\" \"jest --runInBand\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "commit": "cz",
    "prepare": "husky",
    "initialize": "npm run services:detached && npm run services:wait:database",
    "lint:eslint:check": "next lint --dir .",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "services:detached": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:recreate": "docker compose -f infra/compose.yaml up -d --force-recrate",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:up": "docker compose -f infra/compose.yaml up",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js"
  },
  "author": "Lucas Alves",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "next": "15.1.4",
    "node-pg-migrate": "7.9.0",
    "pg": "8.13.1",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@types/jest": "29.5.14",
    "@types/pg": "8.11.10",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.18.0",
    "eslint-config-next": "15.1.4",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
